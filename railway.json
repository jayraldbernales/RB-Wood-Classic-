{
  "build": {
    "builder": "nixpacks",
    "config": {
      "phases": {
        "setup": { /* ... keep existing setup ... */ },
        "install": [ /* ... keep existing install ... */ ],
        "build": [
          "php artisan migrate --force",  // ‚Üê MUST come before optimize
          "php artisan optimize:clear",
          "php artisan optimize"
        ]
      },
      "start": {
        "cmd": "php artisan serve --host=0.0.0.0 --port=$PORT"
      }
    }
  },
  "deploy": {
    "postDeploy": "php artisan migrate --force" 
  }
}
